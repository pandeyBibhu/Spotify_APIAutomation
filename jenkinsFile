pipeline {
    agent any

    options {
        disableConcurrentBuilds()
        timestamps()
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Clean Allure Results') {
            steps {
                bat '''
                if exist target\\allure-results (
                    rmdir /s /q target\\allure-results
                )
                '''
            }
        }

        stage('Build') {
            steps {
                echo "Building the project"
                bat 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                echo "Executing Test Scripts"
                bat 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the code into QA Environment"
            }
        }
    }

    post {

        always {
            echo "Publishing Allure Report"
            allure([
                includeProperties: false,
                jdk: '',
                results: [[path: 'target/allure-results']]
            ])
        }

        success {
            emailext(
    			from: 'pandeybibhu006@gmail.com',
    			to: 'pandeybibhu006@gmail.com',
    			subject: 'Jenkins Gmail SMTP Test',
    			body: 'This is a test email from Jenkins using Gmail SMTP.'
				)

        }

        failure {
            emailext(
                subject: "‚ùå BUILD FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                Build Status: FAILED

                Job: ${env.JOB_NAME}
                Build Number: ${env.BUILD_NUMBER}

                Allure Report (partial):
                ${env.BUILD_URL}allure/

                Please check logs.
                """,
                to: "pandeybibhu006@gmail.com"
            )
        }
    }
}
